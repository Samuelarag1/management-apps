generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model Project {
  id            Int     @id @default(autoincrement())
  name          String
  price         Decimal
  description   String?
  pre_payment   String?
  finish_date   String
  status        String
  initial_date  String
  hosting       String?
  cloud_storage String?
  domain        String?

  user   User? @relation(fields: [userId], references: [id])
  userId Int?
}

model User {
  id        Int       @id @default(autoincrement())
  name      String?
  email     String    @unique
  password  String
  role      Role      @default(USER)
  projects  Project[]
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}
